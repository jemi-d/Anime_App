<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headingStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/home_heading</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="itemHeading">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/home_heading</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="itemEpisode">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="RoundedButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item> <!-- set radius -->
    </style>

</resources>